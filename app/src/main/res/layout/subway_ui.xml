<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sandwich_bg_1"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/subway_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/page_1"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        android:background="@drawable/subway_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/subway_main"
        tools:ignore="MissingConstraints">

        <ImageView

            android:layout_width="12dp"
            android:layout_height="21dp"
            android:src="@drawable/logo_fb2">
        </ImageView>
        <TextView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/white">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="페이스북 계정으로 로그인"
            android:textSize="14dp"
            android:textColor="@color/white"
            >
        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/kakaoButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="115dp"
        android:orientation="horizontal"
        android:background="@drawable/subway_shape2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/subway_main"
        tools:ignore="MissingConstraints">

        <ImageView

            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/logo_kt">
        </ImageView>
        <TextView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/white">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오 계정으로 로그인"
            android:textSize="17dp"
            android:textColor="@color/white">
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/kakaoButton"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="회원가입 건너뛰고 레시피 확인하기"
            android:textColor="#4E4E4E"
            android:textSize="19dp">


        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>